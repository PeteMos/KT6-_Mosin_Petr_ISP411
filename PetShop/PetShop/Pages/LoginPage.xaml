<Page x:Class="PetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС Товары для животных - Форма авторизации">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label Content="Логин:" HorizontalAlignment="Center"></Label>
            <TextBox VerticalContentAlignment="Center" 
                     HorizontalContentAlignment="Center" 
                     x:Name="LoginTextBox" ></TextBox>

            <Label Content="Пароль:" HorizontalAlignment="Center"></Label>
            <PasswordBox VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Center" 
                         x:Name="PasswordBox"></PasswordBox>
            
            <Button x:Name="LoginButton" Content="Войти"
                    Click="LoginButton_Click" Margin="10"></Button>
            
            <Button x:Name="GuestButton" Content="Гость"
                    Click="GuestButton_Click" Margin="10"></Button>

        </StackPanel>
    </Grid>
</Page>
